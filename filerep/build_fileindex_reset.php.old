<?php
set_time_limit(0);
include 'connection.php';
include 'act_settings.php';
include 'functions.php';

if($setting_index_building != '0'){
	echo "File index build seems busy or never completed.\n";
}

// set date last replicated on share
mysql_query("
	update t_host_share
	set
		date_last_replicated = null
	where
		active = 1
		and id_host = " . $setting_server_id_host . " 
	", $conn);

$rows = mysql_affected_rows($conn);

// unmark as running
mysql_query("update t_setting set value = '0' where code = 'index_building'", $conn);


echo 'File index build reset for ' . $rows . " shares.\n";

?>